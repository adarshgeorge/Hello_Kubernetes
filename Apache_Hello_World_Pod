---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: Hello-World
spec:
  replicas: 3
  selector:
    matchLabels:
      app: Hello-World
  template:
    metadata:
      labels:
        app: Hello-World
    spec:
      containers:
      - name: Hello-World
        image: adarshgeorge999/docker:1
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: Hello-World
spec:
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 80
  selector:
    app: Hello-World